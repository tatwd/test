# http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = crlf

[*.{js,html,css}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,go,c,cc,cpp,rs}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*Makefile]
tab_width = 4
indent_style = tab